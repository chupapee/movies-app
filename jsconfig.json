{
	"compilerOptions": {
		"target": "ESNext",
		"module": "ESNext",
		"moduleResolution": "node",
		"resolveJsonModule": true,
		"isolatedModules": true,
		"jsx": "react-jsx",
		"strict": true,
		"lib": ["DOM", "DOM.Iterable", "esnext"],
		"baseUrl": ".",
		"paths": {
			"@app/*": ["./src/app/*"],
			"@pages/*": ["./src/pages/*"],
			"@widgets/*": ["./src/widgets/*"],
			"@features/*": ["./src/features/*"],
			"@entities/*": ["./src/entities/*"],
			"@shared/*": ["./src/shared/*"]
		}
	},
	"include": ["."]
}
