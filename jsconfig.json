{
	"compilerOptions": {
		"target": "ESNext",
		"module": "ESNext",
		"moduleResolution": "node",
		"resolveJsonModule": true,
		"isolatedModules": true,
		"jsx": "react-jsx",
		"strict": true,
		"lib": ["DOM", "DOM.Iterable", "esnext"],
		"baseUrl": "src",
		"paths": {
			"@app/*": ["app/*"],
			"@pages/*": ["pages/*"],
			"@widgets/*": ["widgets/*"],
			"@features/*": ["features/*"],
			"@entities/*": ["entities/*"],
			"@shared/*": ["shared/*"]
		}
	},
	"include": ["src"]
}
